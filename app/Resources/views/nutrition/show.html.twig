{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nutrition</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nutrition.id }}</td>
            </tr>
            <tr>
                <th>Menu</th>
                <td>{{ nutrition.menu }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                <td>{{ nutrition.illustration }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('nutrition_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('nutrition_edit', { 'id': nutrition.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
