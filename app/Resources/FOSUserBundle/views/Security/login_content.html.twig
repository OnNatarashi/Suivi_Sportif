{% trans_default_domain 'FOSUserBundle' %}



<div style="margin:auto">
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}" />
    <div id="corps">
			<div id="intro">
				<img src="{{ asset('logo.png') }}" /><H1>SUIVI SPORTIF</H1>
				 <table>
				    <tr>
				    	<td>
					    	<label for="username">{{ 'security.login.username'|trans }}</label>
					    </td>
					    <td>
					    	<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
					    </td>
					    <td>
					    	<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
					    </td>
				    </tr>
				    <tr>
				    	<td>
					    	<label for="password">{{ 'security.login.password'|trans }}</label>
					    </td>
					    <td>
					    	<input type="password" id="password" name="_password" required="required" />
					    </td>
					    <td>
					    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
					   		 <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
					    </td>
				    </tr>
					<tr>
						<td colspan = "3">
							{% if error %}
							    <div id="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}
						</td>
					</tr>
					<tr>
						<td>
							<a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a>
						</td>
						<td>
							<p>s'inscrire (in progress)</p>
						</td>
						<td>
							<a href="{{ asset('credits.html') }}">Crédits</a>
						</td>
					</tr>
			    </table>
			</div>
		</div>
</form>
</div>
