{% extends 'base.html.twig' %}

{% block body %}
    <h1>Programmes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for programme in programmes %}
            <tr>
                <td><a href="{{ path('programme_show', { 'id': programme.id }) }}">{{ programme.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('programme_show', { 'id': programme.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('programme_edit', { 'id': programme.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('programme_new') }}">Create a new programme</a>
        </li>
    </ul>
{% endblock %}
